import React, { useState, useEffect } from 'react';
import { Menu, X, Phone, Mail, MapPin, Award, Users, Shield, Star, Send } from 'lucide-react';

// SEO компонент для добавления meta-тегов
const SEO = () => {
  const title = "KITCHEN KING | Кухни на заказ в Чебоксарах";
  const description = "Изготовление кухонных гарнитуров на заказ в Чебоксарах. Индивидуальный дизайн, бесплатный замер, 5 лет гарантии. Адрес: ул. Складской проезд, д.43. Тел: +7 (917) 067-20-87";
  const url = "https://kitchen-king.ru";
  const imageUrl = "https://placehold.co/1200x630/f5f0e6/8b7355?text=KITCHEN+KING";

  useEffect(() => {
    // Обновляем title
    document.title = title;
    
    // Удаляем существующие meta-теги
    const existingTags = document.querySelectorAll('meta[name="description"], meta[property="og:title"], meta[property="og:description"], meta[property="og:image"], meta[property="og:url"], meta[name="twitter:title"], meta[name="twitter:description"], meta[name="twitter:image"]');
    existingTags.forEach(tag => tag.remove());
    
    // Создаем и добавляем новые meta-теги
    const metaTags = [
      { name: 'description', content: description },
      { property: 'og:title', content: title },
      { property: 'og:description', content: description },
      { property: 'og:image', content: imageUrl },
      { property: 'og:url', content: url },
      { property: 'og:type', content: 'website' },
      { name: 'twitter:title', content: title },
      { name: 'twitter:description', content: description },
      { name: 'twitter:image', content: imageUrl },
      { name: 'twitter:card', content: 'summary_large_image' },
      { name: 'keywords', content: 'кухни на заказ, кухонные гарнитуры, изготовление кухонь, кухни Чебоксары, мебель на заказ, корпусная мебель, кухни под заказ, дизайн кухни, кухни недорого, кухни с гарантией' },
      { name: 'robots', content: 'index, follow' },
      { name: 'author', content: 'KITCHEN KING' },
      { name: 'geo.region', content: 'RU-CHU' },
      { name: 'geo.placename', content: 'Чебоксары' },
      { name: 'geo.position', content: '56.129099;47.250667' },
      { name: 'ICBM', content: '56.129099, 47.250667' }
    ];

    metaTags.forEach(tag => {
      const meta = document.createElement('meta');
      if (tag.property) {
        meta.setAttribute('property', tag.property);
      } else {
        meta.setAttribute('name', tag.name);
      }
      meta.setAttribute('content', tag.content);
      document.head.appendChild(meta);
    });

    // Добавляем structured data (JSON-LD)
    const script = document.createElement('script');
    script.type = 'application/ld+json';
    script.textContent = JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "KITCHEN KING",
      "image": imageUrl,
      "url": url,
      "telephone": "+79170672087",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Складской проезд, 43",
        "addressLocality": "Чебоксары",
        "postalCode": "428000",
        "addressCountry": "RU"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 56.129099,
        "longitude": 47.250667
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "09:00",
          "closes": "20:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Saturday", "Sunday"],
          "opens": "10:00",
          "closes": "18:00"
        }
      ],
      "priceRange": "$$",
      "servesCuisine": "Кухонная мебель на заказ",
      "sameAs": []
    });
    document.head.appendChild(script);

    return () => {
      // Cleanup
      script.remove();
    };
  }, []);

  return null;
};

const App = () => {
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [activeSection, setActiveSection] = useState('home');

  useEffect(() => {
    const handleScroll = () => {
      const sections = ['home', 'services', 'portfolio', 'contact'];
      const scrollPosition = window.scrollY + 100;

      for (const section of sections) {
        const element = document.getElementById(section);
        if (element) {
          const { offsetTop, offsetHeight } = element;
          if (scrollPosition >= offsetTop && scrollPosition < offsetTop + offsetHeight) {
            setActiveSection(section);
            break;
          }
        }
      }
    };

    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  const scrollToSection = (sectionId) => {
    const element = document.getElementById(sectionId);
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' });
      setIsMenuOpen(false);
    }
  };

  const services = [
    {
      icon: <Award className="w-8 h-8" />,
      title: "Индивидуальный дизайн",
      description: "Создаем уникальный проект под ваше пространство и стиль жизни в Чебоксарах"
    },
    {
      icon: <Users className="w-8 h-8" />,
      title: "Бесплатная консультация",
      description: "Профессиональный замер и консультация без обязательств по Чувашии"
    },
    {
      icon: <Shield className="w-8 h-8" />,
      title: "Гарантия качества",
      description: "5 лет гарантии на всю корпусную мебель и фурнитуру"
    }
  ];

  const portfolioItems = [
    {
      id: 1,
      title: "Современная классика",
      description: "Бежево-золотая кухня с островом для просторной квартиры в Чебоксарах",
      image: "https://placehold.co/600x400/f5f0e6/8b7355?text=Classic+Kitchen"
    },
    {
      id: 2,
      title: "Скандинавский минимализм",
      description: "Светлая кухня с натуральным деревом для уютного дома",
      image: "https://placehold.co/600x400/e8e4d9/5d4037?text=Scandinavian"
    },
    {
      id: 3,
      title: "Лофт индустриал",
      description: "Темная кухня с металлическими элементами для современной квартиры",
      image: "https://placehold.co/600x400/2c2c2c/e0e0e0?text=Loft+Kitchen"
    },
    {
      id: 4,
      title: "Прованс уют",
      description: "Пастельная кухня с цветочными мотивами для загородного дома",
      image: "https://placehold.co/600x400/e6f3f0/4a7c59?text=Provence+Style"
